{
	"name": "SmartModel Dev",
    "dockerComposeFile": [
        "docker-compose.dev.yml",
        "../automation/config-contenedor-bsm.yml"
    ],
	"service": "studio",
	// Specific workspace folder matching the mount point
	"workspaceFolder": "/home/user/Documents/besmart/10.3",

    // Use 'user' user which maps to UID 1000
    "remoteUser": "user",
    "updateRemoteUserUID": false,

    "runServices": ["studio"],

    "forwardPorts": [3001, 2222],

    "customizations": {
        "vscode": {
            "extensions": [
                "REditorSupport.r",
                "quarto.quarto",
                "Posit.air-vscode"
            ]
        }
    }
 }
